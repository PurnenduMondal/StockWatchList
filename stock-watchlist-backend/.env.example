# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=5000
HOST=localhost

# Database Configuration
# MongoDB Atlas (Recommended for production)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/stockwatchlist?retryWrites=true&w=majority

# Local MongoDB (for development)
MONGODB_URI=mongodb://localhost:27017/stockwatchlist

# Alternative database URL (if using other MongoDB providers)
# DATABASE_URL=mongodb://localhost:27017/stockwatchlist

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# External APIs
# RapidAPI Key for Yahoo Finance API
RAPIDAPI_KEY=your_rapidapi_key_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_secure
JWT_EXPIRES_IN=7d

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=7d

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-complex
JWT_EXPIRE=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# API Configuration
API_VERSION=v1

# Email Configuration (for future features)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# External API Keys (for future stock data integration)
# ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
# FINNHUB_API_KEY=your-finnhub-key

# Monitoring and Analytics
# SENTRY_DSN=your-sentry-dsn
# GOOGLE_ANALYTICS_ID=your-ga-id

# File Upload (for future features)
MAX_FILE_SIZE=1048576
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Cache Configuration
CACHE_TTL=3600

# Session Configuration
SESSION_SECRET=your-session-secret-key-here
COOKIE_EXPIRE=604800000